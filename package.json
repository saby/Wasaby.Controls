{
   "name": "sbis3-controls",
   "version": "3.18.600",
   "repository": {
      "type": "git",
      "url": "git@git.sbis.ru:root/sbis3-controls"
   },
   "files": [
      "Controls/*",
      "File/*"
   ],
   "scripts": {
      "start": "node app",
      "build": "grunt build",
      "rebuild": "grunt rebuild",
      "test": "node node_modules/ws-unit-testing/mocha --amd test-isolated",
      "test:debug": "node node_modules/ws-unit-testing/mocha --amd %NODE_DEBUG_OPTION% test-isolated",
      "coverage": "node node_modules/ws-unit-testing/cover --amd test-isolated",
      "lint": "node ./node_modules/eslint/bin/eslint --color --no-eslintrc -c=.eslintrc -f=stylish ."
   },
   "config": {
      "ws": "/",
      "wsModules": {
         "View": "sbis3-ws/View",
         "Core": "sbis3-ws/Core"
      },
      "tests": "tests/unit",
      "test_server_port": 1025,
      "test_report": "artifacts/xunit-report.xml",
      "test_url": {
         "scheme": "http",
         "host": "localhost",
         "port": 1025,
         "path": "",
         "query": "reporter=XUnit"
      },
      "htmlCoverageReport": "artifacts/coverage/index.html",
      "jsonCoverageReport": "artifacts/coverage.json"
   },
   "nyc": {
      "include": [
         "components/**/*.js",
         "Controls/**/*.js",
         "File/**/*.js"
      ],
      "reporter": [
         "text",
         "html"
      ],
      "cache": false,
      "eager": true,
      "report-dir": "./artifacts/coverage"
   },
   "dependencies": {
      "typescript": "^2.9.1"
   },
   "devDependencies": {
      "@tensor-corp/eslint-config": "^2.0.3",
      "cookie-parser": "^1.4.3",
      "eslint": "^5.5.0",
      "express": "^4.16.3",
      "body-parser": "^1.18.3",
      "gulp": "^4.0.0",
      "gulp-less": "^3.5.0",
      "gulp-livereload": "^3.8.1",
      "requirejs": "2.1.18",
      "sbis3-builder": "git+https://git.sbis.ru/root/sbis3-builder.git#3.18.600/bugfix/fix-less-theme-compile",
      "sbis3-ws": "git+https://git.sbis.ru/sbis/ws.git#3.18.600/feature/theme-new-life-2",
      "serve-static": "1.11.x",
      "typescript": "2.5.3",
      "ws-data": "git+http://git.sbis.ru/ws/data.git#3.18.600/bugfix/d-t-pj",
      "ws-unit-testing": "git+https://git.sbis.ru/ws/unit-testing.git#3.18.600/feature/any-testing-folder"
   }
}
