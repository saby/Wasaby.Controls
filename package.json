{
   "name": "sbis3-controls",
   "version": "19.100.0",
   "repository": {
      "type": "git",
      "url": "git@git.sbis.ru:root/sbis3-controls"
   },
   "files": [
      "Data/*",
      "Controls/*",
      "Controls-theme/*",
      "Controls-demo/*"
   ],
   "scripts": {
      "prepare": "saby-typescript --install --tsconfig=tsconfig.base.json",
      "build": "node build-app",
      "compile": "tsc",
      "start": "node app",
      "test": "saby-units --isolated",
      "test:node": "saby-units --isolated --report",
      "test:node-coverage": "saby-units --isolated --report --coverage",
      "test:browser": "saby-units --browser --report",
      "test:browser-coverage": "saby-units --browser --report --coverage",
      "lint": "node ./node_modules/eslint/bin/eslint --color --no-eslintrc -c=.eslintrc -f=stylish .",
      "lintless": "stylelint \"Controls/**/*.less\""
   },
   "saby-units": {
      "moduleType": "amd",
      "root": "application",
      "tests": "tests",
      "initializer": "testing-init.js",
      "url": {
         "port": 1025
      }
   },
   "nyc": {
      "include": [
         "SBIS3.CONTROLS/**/*.js",
         "Controls/**/*.js"
      ],
      "reporter": [
         "text",
         "html"
      ],
      "cache": false,
      "eager": true,
      "report-dir": "./artifacts/coverage"
   },
   "dependencies": {
      "saby-typescript": "git+https://platform-git.sbis.ru/saby/TypeScript.git#rc-19.100"
   },
   "devDependencies": {
      "@tensor-corp/eslint-config": "^2.0.3",
      "Router": "git+https://github.com/saby/Router.git#rc-19.100",
      "body-parser": "^1.18.3",
      "cookie-parser": "^1.4.3",
      "eslint": "^5.7.0",
      "express": "^4.16.3",
      "gulp": "^4.0.0",
      "gulp-less": "^3.5.0",
      "gulp-livereload": "^3.8.1",
      "humanize": "0.0.9",
      "less": "^2.7.3",
      "merge": "1.2.0",
      "minimatch": "^3.0.3",
      "postcss": "^6.0.23",
      "progress": "^2.0.1",
      "requirejs": "2.1.18",
      "rmi": "git+https://git.sbis.ru/sbis/rmi.git#rc-19.100",
      "saby-types": "git+https://platform-git.sbis.ru/saby/Types.git#rc-19.100",
      "saby-units": "git+https://platform-git.sbis.ru/saby/Units.git#rc-19.100",
      "sbis3-builder": "git+https://github.com/saby/Builder.git#rc-19.100",
      "sbis3-ws": "git+https://git.sbis.ru/sbis/ws.git#rc-19.100",
      "serve-static": "1.11.x",
      "stylelint": "^9.7.1",
      "stylelint-config-standard": "^18.2.0",
      "ws-data": "git+https://git.sbis.ru/ws/data.git#rc-19.100"
   }
}
