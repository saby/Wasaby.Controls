<div class="PageWrap">
   <div class="PageBlock">
      <div class="PageBlock__title">With days and title</div>
      <div class="PageBlock__componentWrap">
         <div>_startValue: {{_startValue}}</div>
         <div>_endValue: {{_endValue}}</div>
         <!--<Controls.Calendar.Month month="{{_month}}" captionType="text"/>-->
         <Controls.Calendar.Month month="{{_month}}" bind:startValue="_startValue" bind:endValue="_endValue" showCaption="{{true}}" selectionType="range"/>
         <div>
            <span>startValue: </span>
            <Controls.Button caption="-1 день" on:click="_clickHandler(-1)"/>
            <Controls.Button caption="+1 день" on:click="_clickHandler(1)"/>
         </div>
         <div>
            <span>Отображаемый месяц: </span>
            <Controls.Button caption="-1 месяц" on:click="_changeMonth(-1)"/>
            <Controls.Button caption="+1 месяц" on:click="_changeMonth(1)"/>
         </div>
      </div>
   </div>

   <div class="PageBlock">
      <div class="PageBlock__title">With days, without title</div>
      <div class="PageBlock__componentWrap">
         <Controls.Calendar.Month month="{{_month}}" startValue="{{_startValue2}}" endValue="{{_endValue2}}" captionType="text" selectionType="range"/>
      </div>
   </div>

   <div class="PageBlock">
      <div class="PageBlock__title">Without days and title</div>
      <div class="PageBlock__componentWrap">
         <Controls.Calendar.Month month="2017-03-22T21:00:00.000Z" showWeekdays="{{ false }}" selectionType="range"/>
      </div>
   </div>

   <div class="PageBlock">
      <div class="PageBlock__title">With selected items</div>
      <div class="PageBlock__componentWrap">
         <Controls.Calendar.MonthView
               month="2017-04-22T21:00:00.000Z"
               startValue="2017-04-10T21:00:00.000Z"
               endValue="2017-04-20T21:00:00.000Z"
               selectionType="range"
         />
      </div>
   </div>

   <div class="PageBlock">
      <div class="PageBlock__title">Selection mode: single day</div>
      <div class="PageBlock__componentWrap">
         <Controls.Calendar.Month month="2017-05-22T21:00:00.000Z" selectionType="single"/>
      </div>
   </div>

   <div class="PageBlock">
      <div class="PageBlock__title">Selection mode: quantum {'days': [1, 3, 7], 'weeks': [2], 'months': [1]}</div>
      <div class="PageBlock__componentWrap">
         <Controls.Calendar.Month month="2017-05-22T21:00:00.000Z" selectionType="quantum" quantum="{{ {'days': [1, 3, 7], 'weeks': [1, 2], 'months': [1]} }}"/>
      </div>
   </div>

   <div class="PageBlock">
      <div class="PageBlock__title">Selection mode: quantum {'days': [3]}</div>
      <div class="PageBlock__componentWrap">
         <Controls.Calendar.Month month="2017-05-22T21:00:00.000Z" selectionType="quantum" quantum="{{ {'days': [3]} }}"/>
      </div>
   </div>

   <div class="PageBlock">
      <div class="PageBlock__title">Disabled</div>
      <div class="PageBlock__componentWrap">
         <Controls.Calendar.Month
               month="2017-06-22T21:00:00.000Z"
               startValue="2017-06-10T21:00:00.000Z"
               endValue="2017-06-20T21:00:00.000Z"
               enabled="{{ false }}"
         />
      </div>
   </div>
</div>