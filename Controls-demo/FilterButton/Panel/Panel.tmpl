<div style="margin-left: 15px">

   Шаблон для блока "Отбирается" задается через опцию itemTemplate
   <div style="margin: 20px">
      <Controls.Filter.Button attr:style="max-width: 200px;"
                              attr:id="filter1"
                              on:filterChanged="_filterChangedHandler()">
         <ws:itemTemplate
                 templateName="tmpl!Controls-demo/Layouts/SearchLayout/FilterButtonTemplate/filterItemsTemplate"/>
         <ws:additionalTemplate
                 templateName="tmpl!Controls-demo/Layouts/SearchLayout/FilterButtonTemplate/additionalItemsTemplate"/>
         <ws:items>
            <ws:Array>
               <ws:Object id="FIO" value="Name" resetValue="" visibility="{{false}}"/>
               <ws:Object id="firstName" value="123" resetValue="" visibility="{{false}}"/>
               <ws:Object id="id" value="{{[1]}}" resetValue="{{[1]}}"
                          source="{{sourceDropdown}}" visibility="{{false}}"/>
               <ws:Object id="checked" value="{{true}}" resetValue="{{false}}" visibility="{{false}}"/>
               <ws:Object id="Test1" value="{{[1]}}" resetValue="{{[1]}}" source="{{sourceDropdown}}"
                          visibility="{{false}}"/>
               <ws:Object id="Test2" value="" resetValue="{{true}}" visibility="{{false}}"/>
               <ws:Object id="Test3" value="" resetValue="{{true}}" visibility="{{false}}"/>
               <ws:Object id="Test4" value="" resetValue="{{true}}" visibility="{{false}}"/>
               <ws:Object id="Test5" value="" resetValue="{{true}}" visibility="{{false}}"/>
               <ws:Object id="Test6" value="123" resetValue="" visibility="{{false}}"/>
               <ws:Object id="Test7" value="{{_value}}" resetValue="{{1}}" visibility="{{false}}"/>
               <ws:Object id="Test8" value="{{false}}" resetValue="{{true}}" visibility="{{true}}"/>
            </ws:Array>
         </ws:items>
      </Controls.Filter.Button>
   </div>

   Шаблон для блока "Отбирается" задается через опцию template для каждого фильтра
   <div style="margin: 20px">
      <Controls.Filter.Button attr:style="max-width: 200px;"
                              attr:id="filter2"
                              itemTemplateProperty="template"
                              on:filterChanged="_filterChangedHandler()">
         <ws:additionalTemplate
                 templateName="tmpl!Controls-demo/FilterButton/Panel/resources/additionalItemsTemplate2"/>
         <ws:items>
            <ws:Array>
               <ws:Object id="genreKey" value="" resetValue="" visibility="{{false}}"
                          template="tmpl!Controls-demo/FilterButton/Panel/resources/FIO"/>
               <ws:Object id="FIO" value="Lala" resetValue="reset" visibility="{{true}}"
                          template="tmpl!Controls-demo/FilterButton/Panel/resources/FIO"/>
               <ws:Object id="country" value="" resetValue="" visibility="{{false}}" source="{{sourceDropdown}}"
                          template="tmpl!Controls-demo/FilterButton/Panel/resources/country"/>
               <ws:Object id="genreTip" value="" resetValue="" visibility="{{false}}"
                          template="tmpl!Controls-demo/FilterButton/Panel/resources/FIO"/>
            </ws:Array>
         </ws:items>
      </Controls.Filter.Button>
   </div>

   <div>
      <Controls.Input.Area
              attr:id="area"
              bind:value="_text"/>
   </div>
</div>