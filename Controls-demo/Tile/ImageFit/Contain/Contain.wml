<div class="controlsDemo__wrapper">
   <Controls.tile:View
      tileMode="static"
      displayProperty="title"
      parentProperty="parent"
      nodeProperty="parent@"
      imageFit="contain"
      tileHeight="300"
      imageProperty="image"
      keyProperty="id"
      source="{{_viewSource}}">
      <ws:itemTemplate>
         <ws:partial
            template="Controls/tile:ItemTemplate"
            scope="{{itemTemplate}}"
            hasTitle="{{itemTemplate.itemData.item.isDocument}}"/>
      </ws:itemTemplate>
   </Controls.tile:View>
</div>
