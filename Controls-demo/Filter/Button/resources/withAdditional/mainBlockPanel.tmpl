<ws:template name="period">
   <Controls.Input.Dropdown bind:selectedKeys="item.value"
                            bind:textValue="item.textValue"
                            keyProperty="key">
   <ws:source module='WS.Data/Source/Memory'>
      <ws:options idProperty="key">
         <ws:data>
            <ws:Array>
               <ws:Object key="{{1}}" title='All time' ></ws:Object>
               <ws:Object key="{{2}}" title='Today' ></ws:Object>
               <ws:Object key="{{3}}" title='Past month' ></ws:Object>
               <ws:Object key="{{4}}" title='Past 6 month' ></ws:Object>
               <ws:Object key="{{5}}" title='Past year' ></ws:Object>
            </ws:Array>
         </ws:data>
      </ws:options>
   </ws:source>
   </Controls.Input.Dropdown>
</ws:template>

