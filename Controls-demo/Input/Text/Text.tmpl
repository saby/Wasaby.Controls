<div style="margin: 32px; display: flex; flex-direction: column; width: 18em;" class="test_root_div">
   <div style="padding: 3em; background-color: rgba(38,59,74,0.22)">
      <h2>Text</h2>
      <Controls.Label name="myLabel1" caption="Пример"/>
      <Controls.Input.Text
                           attr:id="main_field"
                           bind:value="_text1"
                           placeholder="{{_placeholder}}"
                           constraint="{{_constraint}}"
                           validationErrors="{{_validationErrors}}"
                           trim="{{_trim}}"
                           tagStyle="{{_tagStyle}}"
                           selectOnClick="{{_selectOnClick}}"
                           maxLength="{{_maxLength}}"
                           on:valueChanged="_eventHandler()"
                           on:inputCompleted="_eventHandler()"
                           readOnly="{{ _readOnly }}"
      />
   </div>
   <div style="padding: 3em; background-color: rgba(81,81,81,0.11)">
      <h3>Задайте опции:</h3>
      <Controls.Label name="myLabel1" caption="placeholder"/>
      <Controls.Input.Text attr:id="placeholder" bind:value="_placeholder"/>
      <Controls.Label name="myLabel1" caption="tagStyle(варианты: attention, done, error, primary, info)"
                      attr:style="height: auto;"/>
      <Controls.Input.Text attr:id="tagStyle" bind:value="_tagStyle"/>
      <Controls.Label name="myLabel1" caption="constraint"/>
      <Controls.Input.Text attr:id="constraint" bind:value="_constraint"/>
      <Controls.Label name="myLabel1" caption="maxLength"/>
      <Controls.Input.Number attr:id="maxLength" bind:value="_maxLength" precision="{{0}}"/>
      <div>
         <Controls.Toggle.Checkbox attr:id="trim" bind:value="_trim" caption="trim"/>
         <Controls.Toggle.Checkbox attr:id="validationErrors" on:valueChanged="valueChangedHandler()"
                                      bind:value="_validationErrorsValue" caption="validationErrors"/>
         <br/>
         <Controls.Toggle.Checkbox attr:id="selectOnClick" bind:value="_selectOnClick" caption="selectOnClick"/>
         <Controls.Toggle.Checkbox attr:id="readOnly" bind:value="_readOnly" caption="readOnly"/>
      </div>
   </div>
   <div hidden="hidden" id="event_test">{{ _eventResult }}</div>
</div>