<span name="{{_options.name}}" sbisname="{{_options.sbisname||_options.name}}" newconfig="{{_options.config}}"
      event:onclick="_onMouseClick()"
      event:onmousedown="_onMouseDown()"
      event:onmouseup="_onMouseUp()"
      event:onkeydown="_onKeyDown()"
      event:onmouseenter="_onMouseEnter()"
      event:onmouseleave="_onMouseLeave()"
      event:ontouchstart="_onTouchStart()"
      event:ontouchend="_onTouchEnd()"
      event:ontouchmove="_onTouchMove()"
      tabindex="{{_options.tabindex}}"
      class="controls-Button controls-ButtonBase{{_isActiveByClick?' controls-Click__active'}}{{!isVisible() ? ' ws-hidden'}}{{!isEnabled() ? ' ws-disabled':' ws-enabled'}}{{_options.primary ? ' controls-Button__primary':' controls-Button__default'}}"
      title="{{_options.tooltip}}"
      disabled="{{!isEnabled() ? 'disabled'}}">
    <ws:if data="{{!!_options.icon||!!_options._iconClass}}">
       <i class="controls-Button__icon js-controls-Button__icon {{_options._iconClass?_options._iconClass:_options.icon}}"></i>
    </ws:if>
    <span class="controls-Button__text js-controls-Button__text{{!_options.caption ? ' controls-Button__emptyCaption'}} {{_options._textClass}}"><ws:if data="{{!!_options.caption}}"><ws:partial template="{{_options.caption}}" /></ws:if><ws:else>{{'&nbsp;'|sanitize}}</ws:else></span>
</span>
