<div class="controls-LongOperationsFilter">
   <div class="controls-LongOperationsFilter__block">
      <ws:SBIS3.CONTROLS.DropdownList
         name="StateFilter"
         className="controls-LongOperationsFilter__stateDropdown controls-DropdownList__withoutArrow controls-DropdownList__linkStyle controls-DropdownList__withoutCross"
         mode="click"
         idProperty="key"
         displayProperty="title"
         parentProperty="parent"
         multiselect="{{false}}"
         text="{{'StateTitle'|mutable}}"
         >
         <ws:selectedKeys>
            <ws:Array>
               <ws:Object><ws:String>{{'StateKey'|mutable}}</ws:String></ws:Object>
            </ws:Array>
         </ws:selectedKeys>
         <ws:items>
            <ws:Array>
               <ws:Object
                  key="{{null}}"
                  title="{[В любом состоянии]}"
               />
               <ws:Object
                  key="running"
                  title="{[В процессе]}"
               />
               <ws:Object
                  key="ended"
                  title="{[Завершенные]}"
               />
               <ws:Object
                  key="success-ended"
                  title="{[Успешно]}"
                  parent="ended"
               />
               <ws:Object
                  key="error-ended"
                  title="{[С ошибками]}"
                  parent="ended"
               />
               <ws:Object
                  key="suspended"
                  title="{[Приостановленные]}"
               />
            </ws:Array>
         </ws:items>
      </ws:SBIS3.CONTROLS.DropdownList>
      <ws:SBIS3.CONTROLS.DropdownList
         name="PeriodFilter"
         className="controls-DropdownList__withoutArrow controls-DropdownList__linkStyle controls-DropdownList__withoutCross"
         mode="click"
         idProperty="key"
         displayProperty="title"
         multiselect="{{false}}"
         text="{{'PeriodTitle'|mutable}}"
         >
         <ws:selectedKeys>
            <ws:Array>
               <ws:Object><ws:String>{{'PeriodKey'|mutable}}</ws:String></ws:Object>
            </ws:Array>
         </ws:selectedKeys>
         <ws:items>
            <ws:Array>
               <ws:Object
                  key="{{null}}"
                  title="{[За все время]}"
               />
               <ws:Object
                  key="PT1H"
                  title="{[За час]}"
               />
               <ws:Object
                  key="P1D"
                  title="{[За сегодня]}"
               />
               <ws:Object
                  key="P7D"
                  title="{[За неделю]}"
               />
               <ws:Object
                  key="P30D"
                  title="{[За месяц]}"
               />
               <ws:Object
                  key="P180D"
                  title="{[За полгода]}"
               />
            </ws:Array>
         </ws:items>
      </ws:SBIS3.CONTROLS.DropdownList>
   </div>
   <div class="controls-LongOperationsFilter__block">
      <div class="controls-LongOperationsFilter__durationTitle">{[Длительность операции]}</div>
      <ws:SBIS3.CONTROLS.DropdownList
         name="DurationFilter"
         className="controls-DropdownList__withoutArrow controls-DropdownList__linkStyle controls-DropdownList__withoutCross"
         mode="click"
         idProperty="key"
         displayProperty="title"
         multiselect="{{false}}"
         text="{{'DurationTitle'|mutable}}"
         >
         <ws:selectedKeys>
            <ws:Array>
               <ws:Object><ws:String>{{'DurationKey'|mutable}}</ws:String></ws:Object>
            </ws:Array>
         </ws:selectedKeys>
         <ws:items>
            <ws:Array>
               <ws:Object
                  key="{{null}}"
                  title="{[Все]}"
               />
               <ws:Object
                  key="PT5M"
                  title="{[Дольше 5 минут]}"
               />
               <ws:Object
                  key="PT10M"
                  title="{[Дольше 10 минут]}"
               />
               <ws:Object
                  key="PT30M"
                  title="{[Дольше 30 минут]}"
               />
               <ws:Object
                  key="PT1H"
                  title="{[Дольше часа]}"
               />
            </ws:Array>
         </ws:items>
      </ws:SBIS3.CONTROLS.DropdownList>
   </div>
   <div if="{{!hideStaffFilter}}" class="controls-LongOperationsFilter__block">
      <div class="controls-LongOperationsFilter__responsibleTitle">{[Ответственный]}</div>
      <ws:partial template="optional!js!SBIS3.Staff.Choice"
         selectionType="leaf"
         withAccess="{{true}}"
         multiselect="{{false}}"
         entityType="Пользователь"
         name="FilterResponsibleFace"
         caption="{{'UserName'|mutable}}"
         placeholder="{[укажите ФИО]}"
         className="controls-LongOperationsFilter__responsibleChooser"
         >
         <ws:selectedKeys>
            <ws:Array>
               <ws:Object><ws:String>{{'UserId'|mutable}}</ws:String></ws:Object>
            </ws:Array>
         </ws:selectedKeys>
      </ws:partial>
   </div>
</div>