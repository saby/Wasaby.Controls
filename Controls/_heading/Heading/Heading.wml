<span attr:class="controls-Header__caption controls_theme-{{_options.theme}}
                  {{_options.textTransform !== 'none' ? ' controls-Header__' + _options.textTransform}}
                  controls-fontsize-{{_options.fontSize}}_theme-{{_options.theme}}
                  controls-fontsize-{{_options.fontSize}}
                  controls-Header-fontsize-{{_options.fontSize}}
                  controls-Header_{{_options.readOnly ? 'readonly' : 'clickable'}}
                  controls-Header__caption_style-{{_options.fontColorStyle}}{{_options.readOnly ? '':'_hovered'}}"
      attr:title="{{_options.tooltip}}"
>{{_options.caption}}</span>
