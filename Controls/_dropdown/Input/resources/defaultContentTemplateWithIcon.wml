<ws:partial template="wml!Controls/_dropdown/Input/resources/defaultContentTemplate" scope="{{_options}}">
   <ws:contentTemplate>
      <div class="controls-Dropdown__iconTemplate_wrapper">
         <div if="{{icon}}" class="controls-Dropdown__icon controls-icon_style-{{item.get('iconStyle') || 'secondary'}}
               {{text ? ' controls-Dropdown__icon-rightSpacing'}}"
              title="{{tooltip || text}}">
            <Controls.icon:Icon iconSize="{{iconSize}}"
                                icon="{{icon}}" />
         </div>
         <div class="controls-Dropdown__text-wrapper">
            <div class="controls-Dropdown__text" title="{{tooltip}}">{{text}}</div>
         </div>
      </div>
   </ws:contentTemplate>
</ws:partial>
