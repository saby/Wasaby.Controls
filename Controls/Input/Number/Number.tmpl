<Controls.Input.resources.InputRender.InputRender
   name="inputRender"
   value="{{ _options.value }}"
   size="{{ _options.size }}"
   selectOnClick="{{_options.selectOnClick}}"
   viewModel="{{_numberViewModel}}"
   tagStyle="{{_options.tagStyle}}"
   placeholder="{{_options.placeholder}}"
   validationErrors="{{_options.validationErrors}}"
   alignRight="{{ _options.alignRight }}"
   on:valueChanged="_valueChangedHandler()"
   on:inputCompleted="_inputCompletedHandler()"
   on:tagHover="_notifyHandler('onTagHover')"
   on:tagClick="_notifyHandler('onTagClick')">
   <ws:content>

      <ws:partial
         template="tmpl!Controls/Input/resources/input"
         type="text"
         enabled="{{isEnabled()}}"
      />

   </ws:content>
</Controls.Input.resources.InputRender.InputRender>