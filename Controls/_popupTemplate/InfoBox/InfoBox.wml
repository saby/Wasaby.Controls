<div class="controls-InfoBoxTemplate controls-InfoBoxTemplate__arrow-side-position-{{_arrowSide}} controls-InfoBoxTemplate__arrow-side-{{_arrowPosition}}" >
   <div class="controls-InfoBoxTemplate__content
   {{_options.styleType==='outline' ? 'controls-InfoBoxTemplate_style_outline_' + _options.style : 'controls-InfoBoxTemplate_style_marker controls-InfoBoxTemplate_style_marker-' + _arrowSide + '_' + _options.style}}">
      <ws:if data="{{_options.content}}">
         <ws:partial template="{{_options.content}}" />
      </ws:if>
      <ws:if data="{{_options.closeButtonVisibility}}">
         <Controls._popupTemplate.CloseButton attr:class="controls-InfoBoxTemplate__closeButton" on:click="_close()" viewMode="link"/>
      </ws:if>
   </div>
   <div class="controls-InfoBoxTemplate__arrow-wrapper-{{_arrowSide}}">
      <div class="controls-InfoBoxTemplate__arrow
       controls-InfoBoxTemplate__arrow-{{_options.style}}
        controls-InfoBoxTemplate__arrow-{{_arrowSide}}
         controls-InfoBoxTemplate__arrow-position-{{_arrowPosition}}"></div>
   </div>
</div>
