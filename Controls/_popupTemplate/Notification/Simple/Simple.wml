<ws:partial template="Controls/_popupTemplate/Notification/Base"
            closeButtonVisibility="{{_options.closeButtonVisibility}}"
            style="{{_options.style}}"
            autoClose="{{_options.autoClose}}">
    <ws:bodyContentTemplate>
        <div class="controls-Notification__simpleTemplate controls-Notification__simpleTemplate_theme-{{_options.theme}}">
            <ws:if data="{{_options.icon}}">
                <div class="controls-Notification__simpleTemplate-icon_theme-{{_options.theme}}
                            controls-Notification__simpleTemplate-icon-size_theme-{{_options.theme}}
                            controls-icon_style-{{_iconStyle}}_theme-{{_options.theme}}
                            icon-{{_options.icon}}">
                </div>
            </ws:if>
            <div class="controls-Notification__simpleTemplate-message">{{_options.text}}</div>
        </div>
    </ws:bodyContentTemplate>
</ws:partial>
